#############################################
# Copy to .env and fill the values as needed.
# Do NOT commit your filled .env file.
#############################################

# Core
DRY_RUN=1

# Source account
SOURCE_USERNAME=BroTeamPills
# Optional: set once to avoid user lookup calls (recommended)
# SOURCE_USER_ID=

# OAuth 2.0 (Native App / Public Client)
TWITTER_CLIENT_ID=
# Public client usually does not require a client secret; leave blank if not applicable
TWITTER_CLIENT_SECRET=
TWITTER_CALLBACK_URL=http://127.0.0.1:6789/callback

# OAuth2 user tokens (do not commit real tokens)
# Populated by oauth2 scripts after authorization
# TWITTER_OAUTH2_ACCESS_TOKEN=
# TWITTER_OAUTH2_REFRESH_TOKEN=

# Translation service
LIBRETRANSLATE_URL=http://127.0.0.1:5000/translate
# LIBRETRANSLATE_API_KEY=

# Rate-limit safety buffer in seconds (adds to server reset time)
RATE_LIMIT_BUFFER_SECONDS=10

# Optional languages override (comma-separated)
# LANGUAGES=ja,ar,fi,hu,ko,tr,zh,ru,th,vi,hi,pl,el

# Legacy OAuth1 (not required for posting on Free tier; kept for compatibility)
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_SECRET=